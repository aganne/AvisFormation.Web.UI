@model AvisFormation.Web.UI.Models.HomeViewModels
@{
    ViewBag.Title = "Accueil";
}
<section class="bg-dark">
    <div class="container-fluid text-center text-secondary mx-auto pr-0 pl-0">

        <div class="card-deck">

            @foreach (var formation in Model.DetailsFormations)
            {
                <div class="card mb-4 border border-rounded ">
                    <img src='@formation.Url' class="card-img-top" />
                    <div class="card-body">
                        <h1 class="card-title font-weight-light">@formation.Nom</h1>

                        <p>
                            @if (formation.MoyenneDesVotes == 0)
                            {
                            <p>Soyez le premier à donner votre avis</p>

                        }
                        else
                        {
                            <span class="glyphicon glyphicon-star text-warning"> </span>

                            if (formation.MoyenneDesVotes > 1)
                            {
                                <span class="glyphicon glyphicon-star text-warning"> </span>
                            }

                            if (formation.MoyenneDesVotes > 2)
                            {
                                <span class="glyphicon glyphicon-star text-warning"> </span>
                            }
                            if (formation.MoyenneDesVotes > 3)
                            {
                                <span class="glyphicon glyphicon-star text-warning"> </span>
                            }
                            if (formation.MoyenneDesVotes > 4)
                            {
                                <span class="glyphicon glyphicon-star text-warning"> </span>
                            }

                            <span>@formation.MoyenneDesVotes / 5</span>
                            <span class="badge badge-pill badge-secondary float-right pr-5 text-left">@formation.NombreVotant</span>
                        }
                            </p>
                            <h3>@formation.Description</h3>

                        </div>
                    <div class="card-footer border">

                        <a class="btn btn-secondary btn-lg m-3 " href="/Laissez-un-avis/@formation.NomSeo" role="button">Evaluer</a>


                    </div>
                </div>
            }
        </div>
    </div>
</section>